#!/usr/bin/env node

'use strict';

process.title = 'plexi';

var Application = require('../src/Application.js');
var cli = require('../cli-interface.js');
var argv = require('attrs.argv');

if( argv.install ) {
	console.log('plexi installing...', argv);
	
	var app = new Application(process.cwd(), argv);
	app.installAll();
} else if( argv.update ) {
	console.log('plexi installing...', argv);
	
	var app = new Application(process.cwd(), argv);
	app.updateAll();
} else if( argv.start ) {
	console.log('plexi starting...', argv);	

	var app = new Application(process.cwd(), argv).start();
	cli.application(app).start();
} else {
	console.log('input command:install,update,start');
}
